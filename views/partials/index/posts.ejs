<% if (post) { %>
    <% post.forEach(element => { %>
<div class="post-message-container">
            <div id="<%= element.postIndexId %>" class="post-name-container">
                <button class="<%= element.postIndexId %>" name="like"><i class="fa-solid fa-arrow-up"></i></button>
                <% if (element.votes) { %>
                    <h1> <%= element.votes %> </h1>
                <% }else{ %>
                    <h1>0..</h1>
                <% } %> 
                <button  class="<%= element.postIndexId %>" name="dislike"><i class="fa-solid fa-arrow-down"></i></button>
            </div>
            <div class="post-content-container">
                <h1><%= element.userPost.postTitle %> </h1>
                <p><%= element.userPost.postContent %> </p>
                <hr/>
                <div>
                    <p><img src="<%= element.userPost.userAvatar %> "/>Posted by <span><%= element.userPost.userName %></span></p>
                    <p>15hr ago</p>
                    <p><i class="fa-regular fa-message"></i>50+</p>
                </div>
            </div>
            
        </div>
        <% }) %>
    <% } %>